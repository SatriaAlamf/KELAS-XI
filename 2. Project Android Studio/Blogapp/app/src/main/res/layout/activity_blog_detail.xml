<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Blog Image -->
        <ImageView
            android:id="@+id/ivBlogImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_placeholder"
            android:contentDescription="@string/app_name"
            tools:src="@drawable/ic_image" />

        <!-- Back Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-28dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="@string/close"
            app:tint="@color/white"
            app:backgroundTint="@color/primary" />

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Blog Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary_light"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Blog Title Goes Here" />

            <!-- Author Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivAuthorImage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_profile"
                    app:civ_border_color="@color/grey_light"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAuthorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary_light"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="Author Name" />

                    <TextView
                        android:id="@+id/tvTimestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/text_secondary_light"
                        android:textSize="14sp"
                        tools:text="2 hours ago" />

                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/grey_light" />

            <!-- Blog Content -->
            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_primary_light"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                tools:text="Blog content goes here. This is the full content of the blog post that the user has written." />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@color/grey_light" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Like Button -->
                <LinearLayout
                    android:id="@+id/layoutLike"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/ivLike"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_like"
                        android:contentDescription="@string/like" />

                    <TextView
                        android:id="@+id/tvLikeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/text_primary_light"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="42" />

                </LinearLayout>

                <!-- Save Button -->
                <LinearLayout
                    android:id="@+id/layoutSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/ivSave"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_save"
                        android:contentDescription="@string/save" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/save"
                        android:textColor="@color/text_primary_light"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Share Button -->
                <LinearLayout
                    android:id="@+id/layoutShare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/ivShare"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_add"
                        android:contentDescription="@string/share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/share"
                        android:textColor="@color/text_primary_light"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="32dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
