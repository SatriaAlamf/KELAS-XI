<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode. -->
    <style name="Base.Theme.Quotesapp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color for dark theme. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color for dark theme. -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color for dark theme. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        
        <!-- Background colors for dark theme -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorSurface">@color/quote_container</item>
        <item name="colorOnSurface">@color/white</item>
    </style>
</resources>